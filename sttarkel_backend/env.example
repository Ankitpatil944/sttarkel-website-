# Application Settings
APP_NAME=SttarkelTool Backend
APP_VERSION=1.0.0
DEBUG=true

# Database Configuration
DATABASE_URL=sqlite:///./sttarkel.db

# API Keys (Add your actual keys here)
TAVUS_API_KEY=your_tavus_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
JUDGE0_API_KEY=your_judge0_api_key_here

# Tavus CVI Settings
TAVUS_BASE_URL=https://api.tavus.com
TAVUS_TIMEOUT=30

# File Upload Settings
MAX_FILE_SIZE=52428800
ALLOWED_AUDIO_FORMATS=.mp3,.wav,.m4a,.ogg
ALLOWED_VIDEO_FORMATS=.mp4,.avi,.mov,.webm

# Assessment Settings
MCQ_TIME_LIMIT=300
CODING_TIME_LIMIT=1800
APTITUDE_TIME_LIMIT=600

# AI Interview Settings
INTERVIEW_SESSION_DURATION=1800
MAX_QUESTIONS_PER_SESSION=10

# Server Settings
HOST=0.0.0.0
PORT=8000
RELOAD=true

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Security
SECRET_KEY=your_secret_key_here_change_in_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:3000

# Redis (for caching and background tasks)
REDIS_URL=redis://localhost:6379

# Monitoring
ENABLE_METRICS=true
PROMETHEUS_PORT=9090

# Development
ENVIRONMENT=development 